


extends ../layout/main-layout.pug
block content
    .col-6.jumbotron.d-flex.flex-wrap.mx-auto
        .shadow.p-3.mb-5.bg-body.rounded.w-50.mx-auto
            h1.p-3 LOGIN
            form.form-horizontal.w-100(method="post", action="checkLogin")
                .form-group.w-100.p-3
                    input.form-control#inputEmail3(name="email", type="email", placeholder="Email/Phone Number/Username")
                .form-group.w-100.p-3
                    input.form-control#inputPassword3(name="password", type="password", placeholder="Password")
                if err
                    .text-center
                        p.text-danger
                            =err
                .form-group.w-100.p-3.d-flex.justify-content-between.align-items-center
                    label
                        input(type="checkbox")
                        |  Remember me
                    button.btn.btn-outline-info(type="submit", name="btn_submit") Login
            .d-flex.justify-content-between.w-100.forgot.px-3.py-2
                div
                    a Forgot password
                div
                    a Login with SMS
            .d-flex.justify-content-between.w-100.align-items-center.px-3.py-2
                hr.featurette-divider.hr-divider
                | Or
                hr.featurette-divider.hr-divider
            .d-flex.justify-content-between.w-100.px-3.py-2.link-social.mb-2
                a.px-3.shadow-sm.p-3.bg-body.rounded.rounded-circle.text-center
                    i.fa-brands.fa-facebook
                a.px-3.shadow-sm.p-3.bg-body.rounded.rounded-circle.text-center
                    i.fa-brands.fa-google
                a.px-3.shadow-sm.p-3.bg-body.rounded.rounded-circle.text-center
                    i.fa-brands.fa-apple
            .text-center.m-1
                p You Have An Account ? 
                    a.text-decoration-underline(href) Register