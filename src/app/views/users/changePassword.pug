extends ../layout/main-layout.pug
block content
    section.bg-image(style="background-image: url(\'https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp\');")
        .mask.d-flex.align-items-center.h-100.gradient-custom-3
            .row.d-flex.justify-content-center.align-items-center.h-100.w-100
                .col-12.col-md-9.col-lg-7.col-xl-6
                    .card
                        .card-body.p-5
                            h2.text-uppercase.text-center.mb-5 Change Password
                            form#register_form(method="post", action="updatePassword?id="+login._id)
                                .form-outline.mb-4.mx-2
                                    input#current-password.form-control.form-control-lg(name="current_password", placeholder="current Password", type="password")

                                .form-outline.mb-4.mx-2
                                    input#password.form-control.form-control-lg(name="new_password", placeholder="New password", type="password")
                                .form-outline.mb-4.mx-2
                                    input#repeat-password.form-control.form-control-lg(name="password_confirmation", placeholder="Repeat your new password", type="password")

                                .d-flex.justify-content-center
                                    button#register.btn.btn-success.btn-block.btn-lg.gradient-custom-4.text-body(name="btn_submit", type="submit") Change Password
                                p.text-center.text-muted.mt-5.mb-0
                                    | Have already an account? 
                                    a.fw-bold.text-body(href="#!")
                                        u Login here