meta(charset="UTF-8")
meta(http-equiv="X-UA-Compatible" content="IE=edge")
meta(name="viewport" content="width=device-width,initial-scale=1")
title Blog
link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", crossorigin="anonymous")
link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer")
link(rel="stylesheet" href="../css/style.css")
header.fixed-top
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark
        .container-fluid
            a.navbar-brand(href="#") BLOG
            button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation")
                span.navbar-toggler-icon
            .collapse.navbar-collapse#navbarCollapse
                ul.navbar-nav.me-auto.mb-2.mb-md-0
                    li.nav-item
                        a.nav-link.active(aria-current="page" href="/") Home
                    li.nav-item
                        a.nav-link(href="#") Link
                    li.nav-item
                        a.nav-link.disabled Disabled
                    li.nav-item
                        a.nav-link(href="/users") Users
                .d-flex.align-items-center(role="search")
                    input.form-control.me-2(type="search" placeholder="Search" aria-label="Search")
                    button.btn.btn-outline-success(type="submit").
                        Search
                    .d-flex.align-items-center.mx-3.flex-column.text-center.justify-content-center
                        if login 
                            a.nav-link.dropdown-toggle.py-0#navbarDarkDropdownMenuLink(href="#", role="button", data-bs-toggle="dropdown", aria-expanded="false")
                                img.img-avatar.text-center(src="../../../upload/users/"+login.profilePic)
                            ul.dropdown-menu.dropdown-menu-dark(aria-labelledby="navbarDarkDropdownMenuLink")
                                li
                                    a.dropdown-item(href="#") My Account
                                li
                                    a.dropdown-item(href="users/changePassword") Change Password
                                li
                                    a.dropdown-item#logout(href="users/logout") Logout
                            p.text-white.name.mt-1
                                =login.full_name
                        else    
                            .d-flex.align-items-center
                                a.text-white(href="/users/register") Register
                                span.text-white |
                                a.text-white(href="/users/login") Login


.container.px-130.fit
    block content
footer.container
    p.float-end
        a(href="#") Back to top
    p
        | © 2017–2022 Company, Inc. · 
        a(href="#") Privacy
        |  · 
        a(href="#") Terms
